<odoo>
  <data>
  <!-- explicit list view RFC Lista Negra table -->
    <record model="ir.ui.view" id="mx_integritas_validacion_rfc.list">
      <field name="name">mx_integritas_validacion_rfc list</field>
      <field name="model">mx_integritas_validacion_rfc.rfc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="is_cancelado"/>
          <field name="is_condonado"/>
          <field name="is_retorno_inversiones"/>
          <field name="is_exigible"/>
          <field name="is_firmes"/>
          <field name="is_no_localizado"/>
          <field name="is_sentencia"/>
          <field name="is_valido"/>
          <field name="is_permitido"/>

          <field name="is_desvirtuado"/>
          <field name="is_definitivo"/>
          <field name="is_presuntos"/>
          <field name="is_sentenciasfavorables"/>
          <field name="act"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="mx_integritas_validacion_rfc.action_window">
      <field name="name">mx_integritas_validacion_rfc window</field>
      <field name="res_model">mx_integritas_validacion_rfc.rfc</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- menu items -->
<menuitem action="mx_integritas_validacion_rfc.action_window" id="menu_rfc_lista_negra" name="RFC Lista Negra del SAT" parent="account.menu_finance_configuration"/>


  </data>
</odoo>  